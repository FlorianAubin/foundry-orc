<form class="{{cssClass}} armor" autocomplete="off">
  <div class="main">
    <div class="header">
      <div class="lock-icon">
        <a class="sheet-change-lock" title="lock/unlock sheet">
          {{#if unlocked}}
            <i class="button fas fa-lock-open"></i>
          {{else}}
            <i class="button fas fa-lock"></i>
          {{/if}}
        </a>
      </div>
      <div>
        <img
          src="{{item.img}}"
          data-edit="img"
          title="{{item.name}}"
          height="64"
          width="64"
        />
      </div>
      <div class="name">
        <h1 class="name" align="center">
          {{#if unlocked}}
            <input
              name="name"
              type="text"
              value="{{item.name}}"
              placeholder="{{localize 'orc.name'}}"
              onClick="this.select();"
            />
          {{else}}
            <span>{{item.name}}</span>
          {{/if}}
        </h1>
      </div>
    </div>
    <div class="content">
      <table>
        <tr>
          <th>{{localize "orc.armor.valueAP"}}</th>
          <th>{{localize "orc.armor.weight"}}</th>
        </tr>
        <tr>
          <td align="center">
            {{#if unlocked}}
              <input
                name="system.ap"
                type="number"
                value="{{item.system.ap}}"
                placeholder="0"
              />
            {{else}}
              <span>{{item.system.ap}}</span>
            {{/if}}
          </td>
          <td align="center">
            {{#if unlocked}}
              <input
                name="system.weight"
                type="number"
                value="{{item.system.weight}}"
                placeholder="0"
              />
            {{else}}
              <span>{{item.system.weight}}</span>
            {{/if}}
          </td>
        </tr>
        <tr>
          <th colspan="2">{{localize "orc.armor.bodyPart"}}</th>
        </tr>
        <tr>
          <td colspan="2" align="center">
            {{#if unlocked}}
              <select name="system.bodyPart" align="center">
                {{#select item.system.bodyPart}}
                  {{#each config.bodyPartList as |bodyPart part|}}
                    <option value="{{bodyPart}}">{{localize bodyPart}}</option>
                  {{/each}}
                {{/select}}
              </select>
            {{else}}
              <span>{{localize item.system.bodyPart}}</span>
            {{/if}}
          </td>
        </tr>
      </table>
    </div>
    <div class="enchant">
      <h2 class="enchant-header">
        {{#if (not item.system.enchant.optionDeploy)}}
          <div 
            class="enchant-deploy button fas fa-arrow-down-short-wide"
            align="center"
            style="width: 25px"
          ></div>
        {{else}}
          <div 
            class="enchant-deploy button fas fa-arrow-up-to-line" 
            align="center"
            style="width: 25px"
          ></div>
        {{/if}}
        <div class="title" align="center">{{localize "orc.enchant.title"}}</div>
      </h2>
      {{#if item.system.enchant.optionDeploy}}
        {{> systems/orc/templates/sheets/enchant-sheet.hbs}}
      {{/if}}
    </div>
  </div>
  <div class="description">
    <h2 class="description-header">     
      {{#if (not item.system.optionDescriptionDeploy)}}
          <div 
            class="description-deploy button fas fa-arrow-down-short-wide"
            align="center"
            style="width: 25px"
          ></div>
        {{else}}
          <div 
            class="description-deploy button fas fa-arrow-up-to-line" 
            align="center"
            style="width: 25px"
          ></div>
        {{/if}}
      <div class="title" align="center">{{localize "orc.weapon.descripton"}}</div>
    </h2>
      {{#if item.system.optionDescriptionDeploy}}
        {{> systems/orc/templates/description.hbs}}
      {{/if}}
  </div>
</form>