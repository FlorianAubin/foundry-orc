<form class="{{cssClass}} ammo" autocomplete="off">
  <div class="main">
    <div class="header">
      <div class="lock-icon">
        <a class="sheet-change-lock" title="lock/unlock sheet">
          {{#if unlocked}}
            <i class="button fas fa-lock-open"></i>
          {{else}}
            <i class="button fas fa-lock"></i>
          {{/if}}
        </a>
      </div>
      <div>
        <img
          src="{{item.img}}"
          data-edit="img"
          title="{{item.name}}"
          height="64"
          width="64"
        />
      </div>
      <div class="name">
        <h1 class="name" align="center">
          {{#if unlocked}}
            <input
              name="name"
              type="text"
              value="{{item.name}}"
              placeholder="{{localize 'orc.name'}}"
              onClick="this.select();"
            />
          {{else}}
            <span>{{item.name}}</span>
          {{/if}}
        </h1>
      </div>
    </div>
    <div class="content">
      <table>
        <tr>
          <th>{{localize "orc.ammo.damage"}}</th>
          <th>{{localize "orc.ammo.effect"}}</th>
        </tr>
        <tr>
          <td align="center">
            {{#if unlocked}}
              <input
                name="system.damage"
                type="text"
                value="{{item.system.damage}}"
                placeholder="0"
              />
            {{else}}
              <span>{{item.system.damage}}</span>
            {{/if}}
          </td>
          <td align="center">
            {{#if unlocked}}
              <input
                name="system.effect"
                type="text"
                value="{{item.system.effect}}"
                placeholder=""
              />
            {{else}}
              <span>{{item.system.effect}}</span>
            {{/if}}
          </td>
        </tr>
          {{#if (or unlocked item.system.precise)}}
            <th>{{localize "orc.ammo.precise"}}</th>
          {{/if}}
          {{#if unlocked}}
            <td align="center">
              <input
                name="system.precise"
                type="checkbox"
                {{checked item.system.precise}}
              />
            </td>
          {{else}}
            {{#if item.system.precise}}
              <td align="center">
                <span class="fas fa-check"></span>
              </td>
            {{/if}}
          {{/if}}
        </tr>
      </table>
      <table>
        <tr>
          <th>{{localize "orc.ammo.stock"}}</th>
          <th>{{localize "orc.ammo.weightIndiv"}}</th>
        </tr>
        <tr>
          <td align="center">
            {{#if unlocked}}
              <input
                name="system.stock"
                type="number"
                value="{{item.system.stock}}"
                placeholder="0"
              />
            {{else}}
              <span>{{item.system.stock}}</span>
            {{/if}}
          </td>
          <td align="center">
            {{#if unlocked}}
              <input
                name="system.weight.indiv"
                type="number"
                value="{{item.system.weight.indiv}}"
                placeholder="0"
              />
            {{else}}
              <span>{{item.system.weight.indiv}}</span>
            {{/if}}
          </td>
        </tr>
      </table>
    </div>
  </div>
  <div class="description">
    <h2 class="description-header">     
      {{#if (not item.system.optionDescriptionDeploy)}}
          <div 
            class="description-deploy button fas fa-arrow-down-short-wide"
            align="center"
            style="width: 25px"
          ></div>
        {{else}}
          <div 
            class="description-deploy button fas fa-arrow-up-to-line" 
            align="center"
            style="width: 25px"
          ></div>
        {{/if}}
      <div class="title" align="center">{{localize "orc.weapon.descripton"}}</div>
    </h2>
      {{#if item.system.optionDescriptionDeploy}}
        {{> systems/orc/templates/description.hbs}}
      {{/if}}
  </div>
</form>