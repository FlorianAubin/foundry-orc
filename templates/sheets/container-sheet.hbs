<form class="{{cssClass}} container" autocomplete="off">
  <div class="main">
    <div class="main-header">
      <div class="lock-icon">
        <a class="sheet-change-lock" title="lock/unlock sheet">
          {{#if unlocked}}
            <i class="button fas fa-lock-open"></i>
          {{else}}
            <i class="button fas fa-lock"></i>
          {{/if}}
        </a>
      </div>
      <div>
        <img
          src="{{actor.img}}"
          data-edit="img"
          title="{{actor.name}}"
          height="64"
          width="64"
        />
      </div>
      <div class="name">
        <h1 align="center" class="name">
          {{#if unlocked}}
            <input
              name="name"
              type="text"
              value="{{actor.name}}"
              placeholder="{{localize 'orc.name'}}"
              onClick="this.select();"
            />
          {{else}}
            <span>{{actor.name}}</span>
          {{/if}}
        </h1>
      </div>
    </div>
    <div class="content">
      <table class="item-list">
        <tr class="header">
          <th class="content"></th>
          <th class="content">{{localize "orc.container.itemStock"}}</th>
          <th class="content">
          {{localize "orc.container.capacity"}}
          {{#if unlocked}}
            <input
              name="system.capacity"
              type="number"
              value="{{actor.system.capacity}}"
              placeholder="0"
              onClick="this.select();"
              style="width: 30px"
            />
          {{else}}
            <span>{{actor.system.capacityUsed}}/{{actor.system.capacity}}</span>
          {{/if}}
          </td>
        </tr>
        {{#each items as |item id|}}
          <tr class="item flexrow" data-item-id="{{item._id}}">
            <td class="content">
              <img
                src="{{item.img}}"
                data-edit="img"
                title="{{item.name}}"
                height="24"
                width="24"
              />
              <div>{{item.name}}</div>
            </td>
            <td class="content" align="center">
              {{#if item.system.stock}}
                {{#if ../unlocked}}
                  <input
                    class="update-stock"
                    type="number"
                    name="item.system.stock"
                    value="{{item.system.stock}}"
                    placeholder="0"
                    onClick="this.select();"
                    style="width: 30px"
                  />
                {{else}}
                  <span>{{item.system.stock}}</span>
                {{/if}}
              {{else}}
                <span>1</span>
              {{/if}}
            </td>
            <td class="content" align="center">
              {{#if item.system.stock}}
                <a class="item-split" align="center" title="Split Item">
                  <i class="button fas fa-split"></i></a>
              {{/if}}
              <a class="item-edit" align="center" title="Edit Item">
                <i class="button fas fa-edit"></i></a>
              <a class="item-delete" align="center" title="Delete Item">
                <i class="button fas fa-trash"></i></a>
            </td>
          </tr>
        {{/each}}
      </table>
    </div>
  </div>
</form>